datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../node_modules/.prisma/client"
}

model Product {
  id     String   @id
  name   String
  price  Float
  imageId String
  size   Size
  color  Color
}

enum Size {
  S
  M
  L
}

enum Color {
  white
  beige
  blue
  green
  purple
}
